<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center">
    <LinearLayout
	    android:orientation="vertical"
	    android:padding="32dp"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:minWidth="340dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
	    <LinearLayout
	        android:id="@+id/material_background"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/material_card"
	        android:orientation="vertical">
	        <LinearLayout
	            android:id="@+id/contentView"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            <TextView
	                android:textColor="#DE000000"
	                android:textSize="23sp"
	                android:id="@+id/custom_title"
	                android:text="Material title"
	                android:layout_marginLeft="23dp"
	                android:layout_marginTop="23dp"
	                android:layout_marginRight="24dp"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"/>
	            <ScrollView
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="20dp"
	                android:layout_marginBottom="14dp">
	                <LinearLayout
	                    android:paddingLeft="24dp"
	                    android:paddingRight="23dp"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent">
	                    <TextView
	                        android:id="@+id/custom_content"
	                        android:textColor="#8a000000"
	                        android:textSize="16sp"
	                        android:lineSpacingMultiplier="1.3"
	                        android:text="message"
	                        android:layout_width="fill_parent"
	                        android:layout_height="wrap_content" />
	                </LinearLayout>
	            </ScrollView>
	        </LinearLayout>
	        <LinearLayout 
			    android:id="@+id/buttonLayout"
			    android:layout_width="match_parent"
			    android:layout_height="56dp"
			    android:orientation="horizontal"
			    android:background="@android:color/transparent"
			    android:gravity="end|right"
			    android:layout_gravity="center_vertical"
			    android:paddingBottom="8dp">
			
			    <Button
			        android:id="@+id/custom_negativeButton"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_marginEnd="8dp"
			        style="@style/mdtp_ActionButton.Text" />
			
			    <Button
			        android:id="@+id/custom_positiveButton"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="16dp"
			        android:layout_marginEnd="16dp"
			        style="@style/mdtp_ActionButton.Text" />
			</LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
